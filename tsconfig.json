{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "lib": ["es2021", "esnext.asynciterable"]
    }
}
